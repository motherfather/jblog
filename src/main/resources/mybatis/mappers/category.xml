<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">
	<insert id="createCategory" parameterType="long">
		<![CDATA[
			insert into category values(category_seq.nextval, #{no }, '기본카테고리', '설명', sysdate)		
		]]>
	</insert>
	
	<select id="listCate" parameterType="string" resultType="categoryvo">
		<![CDATA[
			select * from category c, blog b, users u where u.no=b.users_no and b.users_no=c.blog_no and u.id=#{id }	
		]]>
	</select>
</mapper>
